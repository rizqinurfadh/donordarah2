{{#>src/hbs/page}}

{{#*inline "head-block"}}
<meta name="description" content="Code highlight adds colors to code to make its meaning and structure clearer and easier to read." />
<title>Admin 4B Â· Code highlight</title>
{{/inline}}

{{#*inline "body-block"}}
<div class="app">
  {{{ include 'src/hbs/includes/sidebar.html' }}}
  <div class="app-content">
    <div class="content-header">
      {{{ include 'src/hbs/includes/navbar.html' }}}
      <nav>
        <ol class="breadcrumb">
          <li class="breadcrumb-item">Reference</li>
          <li class="breadcrumb-item">Code highlight</li>
        </ol>
      </nav>
    </div>
    <div class="content-body">
      <div class="container">
        <h1>
          Code highlight
        </h1>
        <p>
          Code highlight is a feature with predefined styles for HTML, CSS, JavaScript and JSON.
          These styles are a customization for the languages supported by the library
          <a href="https://highlightjs.org/">highlight.js</a>. See the basic example:
        </p>
        <div class="source-code">
          <a href="#how-to-use" data-toggle="collapse">
            <i class="fa fa-code"></i> Source code
          </a>
          <div id="how-to-use" class="collapse">
            <pre><code class="html">{{ include 'src/hbs/includes/code-examples/reference/code-highlight/basic-usage.html' }}</code></pre>
          </div>
        </div>
        <p>
          See below the code highlight for each supported language:
        </p>
        <div class="source-code">
          <div class="nav nav-tabs">
            <a href="#highlight-light-html" class="active" data-toggle="tab">HTML</a>
            <a href="#highlight-light-css" data-toggle="tab">CSS</a>
            <a href="#highlight-light-js" data-toggle="tab">JavaScript</a>
            <a href="#highlight-light-json" data-toggle="tab">JSON</a>
          </div>
          <div class="tab-content">
            <div id="highlight-light-html" class="tab-pane active">
              <pre><code class="html">{{ include 'src/hbs/includes/code-examples/reference/code-highlight/code-highlight.html' }}</code></pre>
            </div>
            <div id="highlight-light-css" class="tab-pane">
              <pre><code class="css">{{ include 'src/hbs/includes/code-examples/reference/code-highlight/code-highlight.css' }}</code></pre>
            </div>
            <div id="highlight-light-js" class="tab-pane">
              <pre><code class="js">{{ include 'src/hbs/includes/code-examples/reference/code-highlight/code-highlight.js' }}</code></pre>
            </div>
            <div id="highlight-light-json" class="tab-pane">
              <pre><code class="json">{{ include 'src/hbs/includes/code-examples/reference/code-highlight/code-highlight.json' }}</code></pre>
            </div>
          </div>
        </div>
        <div class="source-code">
          <a href="#theme-light" data-toggle="collapse">
            <i class="fa fa-code"></i> Source code
          </a>
          <div id="theme-light" class="collapse">
            <pre><code class="html">{{ include 'src/hbs/includes/code-examples/reference/code-highlight/each-language.html' }}</code></pre>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
{{/inline}}

{{/src/hbs/page}}
