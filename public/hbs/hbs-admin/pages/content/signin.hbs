{{#>src/hbs/page}}

{{#*inline "head-block"}}
<meta name="description" content="Sign in page allow users to access the application by providing their credentials." />
<title>Admin 4B Â· Sign in</title>
{{/inline}}

{{#*inline "body-block"}}
<div class="app">
  <div class="app-content">
    <div class="content-body">
      <div class="page-sign sign-in">
        <div class="container pb-0 mb-0">
          <div class="source-code">
            <a href="#settings" data-toggle="collapse">
              <i class="fa fa-code"></i> Source code
            </a>
            <div id="settings" class="collapse">
              <pre><code class="html">{{ include 'src/hbs/includes/code-examples/content/signin.html' }}</code></pre>
            </div>
          </div>
        </div>
        <div class="container-sign">
          <div class="card">
            <div class="card-header">
              <img src="/docs/assets/brand/admin4b.svg">
              <h1>Welcome back</h1>
              <span>Sign in to your account</span>
            </div>
            <div class="card-body">
              <div class="form-group">
                <label>E-mail</label>
                <input type="text" class="form-control">
              </div>
              <div class="form-group">
                <label class="d-flex">
                  <div>Password</div>
                  <a href="#" class="ml-auto">
                    Forgot password?
                  </a>
                </label>
                <input type="password" class="form-control">
              </div>
              <div class="form-group d-flex">
                <label class="checkbox">
                  <input type="checkbox">
                  <span class="check-mark"></span> Remember me
                </label>
                <a href="/" class="btn btn-primary ml-auto">
                  Sign in
                </a>
              </div>
            </div>
            <div class="card-footer">
              <p class="text-muted">Don't have an account?</p>
              <a href="/docs/pages/content/signup.html">Sign up for free</a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
{{/inline}}

{{/src/hbs/page}}
